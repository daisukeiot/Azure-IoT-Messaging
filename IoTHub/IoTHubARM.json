{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "IoT Hub Name": {
            "type": "string",
            "metadata": {
                "description": "The name of Event Hubs Namespace that you wish to create.  Must be globally unique"
            },
            "defaultValue": "[concat(resourceGroup().name, '-IoTHub-', uniqueString(resourceGroup().id))]"
        },
        "IoT Hub SKU": {
            "type": "string",
            "defaultValue":"F1",
            "allowedValues":[
                "F1",
                "S1"
            ],
            "metadata": {
                "description": "IoT Hub SKU."
            }
        }
    },
    "variables": {
        "IoTHubSetting" : {
            "F1" : {
                "iothubsku" : "F1",
                "partitionCount": 2
            },
            "S1" : {
                "iothubsku" : "S1",
                "partitionCount": 4
            }
        } 
    },
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2019-11-04",
            "name": "[parameters('IoT Hub Name')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[variables('IoTHubSetting')[parameters('IoT Hub SKU')].iothubsku]",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "ipFilterRules": [],
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": "[variables('IoTHubSetting')[parameters('IoT Hub SKU')].partitionCount]"
                    }
                },
                "routing": {
                    "endpoints": {
                        "serviceBusQueues": [],
                        "serviceBusTopics": [],
                        "eventHubs": [],
                        "storageContainers": []
                    },
                    "routes": [],
                    "fallbackRoute": {
                        "name": "$fallback",
                        "source": "DeviceMessages",
                        "condition": "true",
                        "endpointNames": [
                            "events"
                        ],
                        "isEnabled": true
                    }
                },
                "messagingEndpoints": {
                    "fileNotifications": {
                        "lockDurationAsIso8601": "PT1M",
                        "ttlAsIso8601": "PT1H",
                        "maxDeliveryCount": 10
                    }
                },
                "enableFileUploadNotifications": false,
                "cloudToDevice": {
                    "maxDeliveryCount": 10,
                    "defaultTtlAsIso8601": "PT1H",
                    "feedback": {
                        "lockDurationAsIso8601": "PT1M",
                        "ttlAsIso8601": "PT1H",
                        "maxDeliveryCount": 10
                    }
                },
                "features": "None"
            }
        }
    ]
}